<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.TextField.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.disctionary.gameControl"
            prefHeight="400.0" prefWidth="600.0">
    <children>

  <Text fill="blue" layoutX="200.0" layoutY="50.0" text="Dictionary">
 <font>
 <Font size="25.0"/>
 </font>
  </Text>
    <Text layoutX="200.0" layoutY="100.0" text="Search for the word">
        <font>
            <Font size="15.0"/>
        </font>
    </Text>
    <TextField fx:id="searchword" layoutY="100.0" layoutX="200.0" minWidth="100" minHeight="20" promptText="Enter the Word"></TextField>
    <ImageView fitHeight="25.0" fitWidth="100" layoutX="355.0" layoutY="100" onMouseClicked="#search" >
        <image>
            <Image url="@search.png"/>
        </image>
    </ImageView>
    <Text layoutX="201.0" layoutY="150.0" text="Enter a word">
        <font>
            <Font size="15.0"/>
        </font>
    </Text>
    <TextField fx:id="word" layoutY="250" layoutX="200" minWidth="100" minHeight="20" promptText="Enter a word"></TextField>
    <TextField fx:id="meaning" layoutY="300" layoutX="200" minWidth="100" minHeight="20" promptText="Enter the meaning"></TextField>
        <ImageView fitHeight="25.0" fitWidth="100" layoutX="355.0" layoutY="300" onMouseClicked="#newWord">
            <image>
                <Image url="@add.png"/>
            </image>
        </ImageView>
    </children>
</AnchorPane>
